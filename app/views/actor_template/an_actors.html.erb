<h1>Actor #<%= @actor_id %> details</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/504" class="btn btn-block btn-outline-secondary">
  Delete actor
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="https://robohash.org/<%= @the_actor.image %>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at) %> ago
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>

  <% @actor_filmography.each do |a_film| %>
        <% char = Movie.where({ :id => a_film.movie_id }).at(0) %>
    <tr>
      <td>
        <%= char.title %>
      </td>
      <td>
        <%# y = Movie.where({ :id => a_film.movie_id }).at(0) %>
        <%= char.year %>
      </td>
      <td>
        <%= Director.where({ :id => char.director_id }).at(0).name %>
      </td>
      <td>
        <%= a_film.name %>
      </td>
      <td>
        <a href="/movies/<%= a_film.movie_id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>
